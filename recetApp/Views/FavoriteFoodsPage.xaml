<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecetApp.Views.FavoriteFoodsPage"
             Title="Alimentos Favoritos">
    <CollectionView ItemsSource="{Binding FavoriteFoods}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Padding="10">
                    <Label Text="{Binding FoodName}" FontSize="18" />
                    <Label Text="{Binding NutritionalInfo}" FontSize="14" TextColor="Gray" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
